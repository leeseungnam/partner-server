<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.wrightbrothers.apps.sign.query.Sign">
	
	<select id="loadUserByUsername" parameterType="java.lang.String" resultMap="loadUserByUsernameMap">
		select
			user.user_id,
			user.user_pwd,
		    role.auth_code
		  from users user
		 inner join users_auth role
		    on role.user_id = user.user_id
		 where user.user_id = #{userId}
	</select>

	<resultMap id="loadUserByUsernameMap" type="kr.wrightbrothers.apps.sign.dto.UserDto">
		<result column="user_id" property="userId"/>
		<result column="user_pwd" property="userPwd"/>
		<collection property="authorities" ofType="kr.wrightbrothers.apps.sign.dto.AuthorityDto">
			<result column="auth_code" property="authCode"/>
		</collection>
	</resultMap>
</mapper>
